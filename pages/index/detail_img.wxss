.container{height:100%;overflow:none;padding:0;text-align:left;background-color:#25005d;}
.main_title{font-size:48rpx;font-weight:500;line-height:60rpx;padding:60rpx 60rpx 0;background-color:#fff;}
.sub_title{font-size:26rpx;line-height:60rpx;padding:0 60rpx 20rpx;background-color:#fff;}
.sub_title .post_date{color:#888;}
.sub_title .from{color:#1AAD19;margin-left:40rpx;}
.content,.content p,.content div{line-height:48rpx;font-size:30rpx;color:#353535;}
.content img{width:100%;height:auto;margin:15px auto;}
rich-text{position:fixed;width:100vw;height:calc(100vh - 200rpx);overflow-x:hidden;overflow-y:auto;background-color:#25005d;}
rich-text img{width:100%;height:auto;}