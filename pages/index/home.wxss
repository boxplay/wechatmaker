/* swiper{height:calc((100vw * .9) * .6);background-color:#f0f0f0;} */
.container{overflow:none;height:100%;}
.slider{width:100%;height:calc(100vw * .6);margin-top:40rpx;}
.slider image{width:100vw;height:calc(100vw * .5);}
.slider swiper-item{height:calc(100vw * .5) !important;overflow:hidden;}
.swiper_image{width:100vw;margin-bottom:-10rpx;}

.slider2{width:100%;height:calc((100vw * .53) * .65);}
/* .slider2 image{width:calc(100vw * .53);height:calc((100vw * .53) * .65);} */
.slider2 swiper-item{width:calc(100vw * .53) !important;height:calc((100vw * .53) * .65)!important;overflow:hidden;padding:0 20rpx !important;}
.slider2 swiper-item .img_box{border-radius:20rpx;width:100%;height:calc((100vw * .53) * .55);overflow:hidden;position:relative;transition:all .2s ease-in-out;top:calc((100vw * .53) * .05);}
.slider2 swiper-item .img_box .desc{position:absolute;bottom:0;background-image: linear-gradient(-180deg, rgba(33,30,45,0.17) 0%, #0C0B15 100%);width:100%;line-height:30rpx;min-height:80rpx;font-size:30rpx;color:#fff;padding:10rpx 20rpx;box-sizing:border-box;text-align:left;font-weight:600;word-break:break-all;}
.slider2 swiper-item.zoom .img_box{height:calc((100vw * .53) * .65);top:0;}

.list{width:calc(100vw * .9);height:calc(100vw * .9 * .5);position:relative;margin:0 auto 40rpx;}
.list .img_box{border-radius:20rpx;width:100%;height:calc(100vw * .9 * .5);overflow:hidden;position:relative;}
.list .img_box image{width:100%;}
.list .desc{position:absolute;bottom:0;background-image: linear-gradient(-180deg, rgba(33,30,45,0.17) 0%, #0C0B15 100%);width:100%;line-height:40rpx;font-size:30rpx;color:#fff;padding:10rpx 20rpx;box-sizing:border-box;text-align:left;font-weight:600;}

.home_main_title{font-size:38rpx;text-align:center;margin:40rpx auto 20rpx;}
.home_main_title text{display:inline-block;margin:0 10rpx;}
.home_main_title text:nth-child(odd){width:20rpx;border-bottom:1px solid #000;height:2rpx;line-height:2rpx;margin:-12rpx 10rpx 10rpx;}
.home_main_title text:nth-child(even){height:38rpx;line-height:45rpx;font-weight:bold;}

/*用来包裹所有的小圆点  */
.dots{  
  width: 100%;
  height: 36rpx; 
  display: flex;
  flex-direction: row;
  position: absolute;
  top:calc((100vw * .9) * .53 - 36rpx);
  justify-content: center;
  transition: all 05s ease-in-out;
}  
/*未选中时的小圆点样式 */
.dot{  
  width: 15rpx;  
  height: 15rpx;   
  border-radius: 50%;
  margin:0 8rpx;
  background-color: #f0f0f0f0;
}  
/*选中以后的小圆点样式  */
.active{  
  width: 35rpx;   
  height: 15rpx;
  border-radius: 7.5rpx;
  background-color: #1AAD19;
}