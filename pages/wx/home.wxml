<!--pages/index/home.wxml-->
<view class='container'>
	<view>
		<button type="primary" wx:if="{{userInfo.nickName}}" bindtap="goSubPage"> 我要自荐 {{userInfo.nickName}}</button>
		<button wx:if="{{!userInfo.nickName || userInfo == null}}" open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="onGotUserInfo">我要自荐</button>
	</view>
	<view class="tab_bar {{isIpx ? 'fix-iphonex-button':''}}">
		<view class='icon_home' bindtap='goIndex'>
			<view class='icon'>
				<view class='home'></view>
				<text>{{home}}</text>
			</view>
		</view>
		<view class='icon_article' bindtap='goHome'>
			<view class='icon selected'>
				<view class='article'></view>
				<text>{{develop}}</text>
			</view>
		</view>
	</view>
</view>
