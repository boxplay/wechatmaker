.home_main_title {
	font-size: 38rpx;
	text-align: center;
	margin: 40rpx auto 20rpx;
}
.home-video{
	position: absolute;
	top:1292rpx;
	width: 100%;
	margin: 0 auto;
	border-radius:20rpx;
}
.home-link{
	position: absolute;
	top:5933rpx;
	width: 100%;
	margin: 0 auto;
	border-radius:20rpx;
	background:red;
	height:60rpx;
	opacity:0;
}
.home-video video{
	width: calc(100vw * 0.91);
	border-radius:20rpx;
	height:290rpx;
}
.home_main_title text {
	display: inline-block;
	margin: 0 10rpx;
}

.home_main_title text:nth-child(odd) {
	width: 20rpx;
	border-bottom: 1px solid #000;
	height: 2rpx;
	line-height: 2rpx;
	margin: -12rpx 10rpx 10rpx;
}

.home_main_title text:nth-child(even) {
	height: 38rpx;
	line-height: 45rpx;
	font-weight: bold;
}

/*用来包裹所有的小圆点  */
.dots {
	width: 100%;
	height: 36rpx;
	display: flex;
	flex-direction: row;
	position: absolute;
	top: calc((100vw * .9) * .53 - 36rpx);
	justify-content: center;
	transition: all 05s ease-in-out;
}

/*未选中时的小圆点样式 */
.dot {
	width: 15rpx;
	height: 15rpx;
	border-radius: 50%;
	margin: 0 8rpx;
	background-color: #f0f0f0f0;
}

/*选中以后的小圆点样式  */
.active {
	width: 35rpx;
	height: 15rpx;
	border-radius: 7.5rpx;
	background-color: #1AAD19;
}

.list {
	width: calc(100vw * .9);
	height: calc(100vw * .9 * .5);
	position: relative;
	margin: 0 auto 40rpx;
}

.list .img_box {
	border-radius: 20rpx;
	width: 100%;
	height: calc(100vw * .9 * .5);
	overflow: hidden;
	position: relative;
}

.list .img_box image {
	width: 100%;
}

.index-image-box {
	position: relative;
}

.index-image-box image {
	width: 100%;
	display:block;
	height:auto;
}

.index-button-box {
	position: fixed;
	bottom: 120rpx;
	left:0;
	right: 0;
	margin-left: auto;
	margin-right: auto;
	width: calc(100vw * .9);
	background:url('https://makercdn.someet.cc/wxapp/btn.png') no-repeat;
	background-size:contain;
	height:100rpx;
}

.index-button-box button {
	width: 100%;
	background-color:  #ffce00;
	height: 80rpx;
	border-radius: 80rpx;
	line-height: 80rpx;
	opacity:0;
	z-index:2;
}
.index-button-x{
	bottom: 188rpx;
}
.floatMenu{
	position: absolute;
	width: 100vw;
	left:0;
	right:0;
	top:calc(100vh * 2.1);
	height: 80rpx;
	z-index:10;
	/* background-color: red; */
}
.floatMenuForIphx{
	top:calc(100vh * 1.75);
}
.floatMenuForPad{
	top:calc(100vh * 2.52);
}
.floatMenuForHuaWei{
	top: calc(100vh * 1.82);
}
.fixedMenu{
	position: fixed;
	top:0;
	background-color: white
}
.floatMenuHidden{
	height: 1rpx;
}
.floatMenuItem{
	display: inline-block;
	width: calc(100vw / 4);
	text-align: center;
	height: 80rpx;
	line-height: 80rpx;
	color: black;
	font-size: 30rpx;
	font-weight: 500;
}
.floatMenuItemActive{
	position: relative;
	color:#09bb07;
}
.floatMenuItemActive:after{
	content: "";
	position: absolute;
	width: 75%;
	left: 12.5%;
	right: 12.5%;
	bottom:10rpx;
	height: 5rpx;
	background-color:#09bb07;
}