.index-title{
	position: relative;
}
.index-title .title_box{
	position: absolute;
	width: 100%;
	text-align: center;
	left: 0;
	right: 0;
	bottom:0;
	background-color: rgba(0,0,0,0.5);
	color:white;
	height: 70rpx;
	line-height: 70rpx;
	z-index: 2;
	border-radius:0rpx 0rpx 20rpx 20rpx;
}
#homeVideoBox{
	margin-top: 20rpx;
}
.home-video{
	width: 100%;
	margin: 0 auto;
	border-radius:20rpx;
	height: 100%;
}
.home-video video{
	width: calc(100vw * 0.91);
	border-radius:20rpx;
	height:100%;
}
