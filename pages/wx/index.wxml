	<scroll-view scroll-y="true" style="height: {{scrollHeight}};">
		<view class='list index-title' id="homeVideoBox" data-id="0">
			<view class="home-video">
				<video poster="https://makerforwx.someet.cc/uploads/core/topic/pic/42/wxsk.jpg" id="wechatmaker" object-fit="cover" bindtap="videoControl" play-btn-position="center" src="https://makercdn.someet.cc/wxapp/wechatmaker.mp4" controls></video>
			</view>
		</view>
		<block wx:for="{{newsUrls}}" wx:key="{{index}}">
			<view class='list index-title' data-id="{{item.id}}" data-title="{{item.title}}" bindtap="detail">
				<view class="title_box" data-id="{{item.id}}" data-title="{{item.title}}" bindtap="detail">
					{{item.title}}
				</view>
				<view class='img_box'>
					<image src='{{item.pic}}' mode="widthFix"></image>
				</view>
			</view>
		</block>
	</scroll-view>
	<view class="tab_bar {{isIpx ? 'fix-iphonex-button':''}}">
		<view class='icon_home'>
			<view class='icon selected'>
				<view class='home'></view>
				<text>{{home}}</text>
			</view>
		</view>
		<view class='icon_article' bindtap='goHome'>
			<view class='icon'>
				<view class='article'></view>
				<text>{{develop}}</text>
			</view>
		</view>
		<view class='icon_we' bindtap='goMaker'>
			<view class='icon'>
				<view class='we'></view>
				<text>{{articleList}}</text>
			</view>
		</view>
		
	</view>
</view>
